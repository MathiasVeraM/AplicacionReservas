@model IEnumerable<AplicacionReservas.Models.Unidad>

<h1>Unidades</h1>

<a asp-action="Create" class="btn btn-dark mb-3">Nueva Unidad</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var unidad in Model)
        {
            <tr>
                <td>@unidad.Nombre</td>
                <td>
                    <a asp-action="Details" asp-route-id="@unidad.Id" class="btn btn-dark btn-sm">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@unidad.Id" class="btn btn-dark btn-sm">Editar</a>
                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modalEliminar-@unidad.Id">
                        Eliminar
                    </button>

                    <!-- Modal Eliminación -->
                    <div class="modal fade" id="modalEliminar-@unidad.Id" tabindex="-1" aria-labelledby="modalEliminarLabel-@unidad.Id" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form asp-action="Delete" method="post">
                                    <input type="hidden" name="id" value="@unidad.Id" />
                                    <div class="modal-header bg-danger text-white">
                                        <h5 class="modal-title" id="modalEliminarLabel-@unidad.Id">Confirmar Eliminación</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        ¿Seguro que desea eliminar la unidad "@unidad.Nombre"?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                        <button type="submit" class="btn btn-danger">Eliminar</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

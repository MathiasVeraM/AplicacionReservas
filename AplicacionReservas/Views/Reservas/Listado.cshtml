@model IEnumerable<AplicacionReservas.Models.Reserva>
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

@{
    ViewData["Title"] = "Listado de Reservas";
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool esAdmin = User.IsInRole("Admin");
    string userId = User.FindFirst("UserId")?.Value;
}

<h1>Listado de Reservas</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Módulo</th>
            <th>Laboratorio</th>
            <th>Estudiantes</th>
            <th>Equipos</th>
            <th>Reactivos</th>
            <th>Estado</th>
            @if (esAdmin || Model.Any(r => !r.EsMantenimiento))
            {
                <th>Detalle</th>
            }
            @if (esAdmin)
            {
                <th>Acciones</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Fecha.ToShortDateString()</td>
                <td>@(r.ModuloHorario?.Nombre ?? "—")</td>
                <td>@(r.Laboratorio?.Nombre ?? "—")</td>
                <td>
                    <ul class="mb-0">
                        @if (r.MiembrosEquipo != null && r.MiembrosEquipo.Any())
                        {
                            foreach (var miem in r.MiembrosEquipo)
                            {
                                <li>@miem.Nombre</li>
                            }
                        }
                        else
                        {
                            <li>-</li>
                        }
                    </ul>
                </td>
                <td>
                    <ul class="mb-0">
                        @if (r.Equipos != null && r.Equipos.Any())
                        {
                            foreach (var eq in r.Equipos)
                            {
                                <li>@eq.Nombre</li>
                            }
                        }
                        else
                        {
                            <li>-</li>
                        }
                    </ul>
                </td>
                <td>
                    <ul class="mb-0">
                        @if (r.ReservaReactivos != null && r.ReservaReactivos.Any())
                        {
                            foreach (var rr in r.ReservaReactivos)
                            {
                                <li>@(rr.Reactivo?.Nombre ?? "—") - @rr.Cantidad</li>
                            }
                        }
                        else
                        {
                            <li>-</li>
                        }
                    </ul>
                </td>
                <td>
                    @if (r.EsMantenimiento)
                    {
                        <span class="badge bg-info text-dark">Mantenimiento</span>
                    }
                    else
                    {
                        switch (r.Aprobado)
                        {
                            case EstadoAprobacion.Aprobado:
                                <span class="badge bg-success">Aprobado</span>
                                break;
                            case EstadoAprobacion.NoAprobado:
                                <span class="badge bg-danger">Rechazado</span>
                                break;
                            case EstadoAprobacion.Revision:
                                <span class="badge bg-warning text-dark">Hacer Cambios</span>
                                break;
                            case EstadoAprobacion.Pendiente:
                                <span class="badge bg-secondary">Pendiente</span>
                                break;
                        }
                    }
                </td>
                @if (!r.EsMantenimiento)
                {
                    @if (esAdmin)
                    {
                        <td>
                            <a asp-action="Detalle" asp-route-id="@r.Id" class="btn btn-info">Ver Detalles</a>
                        </td>
                        <td>
                            <!-- Botón para aprobar -->
                            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalAprobar-@r.Id">
                                Aprobar
                            </button>

                            <!-- Modal Aprobar -->
                            <div class="modal fade" id="modalAprobar-@r.Id" tabindex="-1" aria-labelledby="modalAprobarLabel-@r.Id" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <form id="formAprobar-@r.Id" method="post" asp-action="Aprobar">
                                            <input type="hidden" name="id" value="@r.Id" />
                                            <div class="modal-header bg-success text-white">
                                                <h5 class="modal-title" id="modalAprobarLabel-@r.Id">Aprobar Reserva</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="mb-3">
                                                    <label for="observacionesAprobar-@r.Id" class="form-label">Observaciones (opcional)</label>
                                                    <textarea class="form-control" id="observacionesAprobar-@r.Id" name="observaciones" rows="3"></textarea>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                                <button type="submit" class="btn btn-success">Enviar y Aprobar</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <br />

                            <!-- Botón para rechazar -->
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modalRechazar-@r.Id">
                                Rechazar
                            </button>

                            <!-- Modal Rechazar -->
                            <div class="modal fade" id="modalRechazar-@r.Id" tabindex="-1" aria-labelledby="modalRechazarLabel-@r.Id" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <form id="formRechazar-@r.Id" method="post" asp-action="Rechazar">
                                            <input type="hidden" name="id" value="@r.Id" />
                                            <div class="modal-header bg-danger text-white">
                                                <h5 class="modal-title" id="modalRechazarLabel-@r.Id">Rechazar Reserva</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="mb-3">
                                                    <label for="observacionesRechazar-@r.Id" class="form-label">Observaciones</label>
                                                    <textarea class="form-control" id="observacionesRechazar-@r.Id" name="observaciones" rows="3"></textarea>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                                <button type="submit" class="btn btn-danger">Enviar y Rechazar</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <br />

                            <!-- Botón para Aprobado Parcial -->
                            <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#modalRevision-@r.Id">
                                Aprobado Parcial
                            </button>

                            <!-- Modal Revisión -->
                            <div class="modal fade" id="modalRevision-@r.Id" tabindex="-1" aria-labelledby="modalRevisionLabel-@r.Id" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <form id="formRevision-@r.Id" method="post" asp-action="EnRevision">
                                            <input type="hidden" name="id" value="@r.Id" />
                                            <div class="modal-header bg-warning">
                                                <h5 class="modal-title" id="modalRevisionLabel-@r.Id">Poner en Revisión la Reserva</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="mb-3">
                                                    <label for="observacionesRevision-@r.Id" class="form-label">Observaciones</label>
                                                    <textarea class="form-control" id="observacionesRevision-@r.Id" name="observaciones" rows="3"></textarea>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                                <button type="submit" class="btn btn-warning">Enviar y Revisar</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </td>
                    }
                    else
                    {
                        <td>
                            <a asp-action="Detalle" asp-route-id="@r.Id" class="btn btn-dark btn-sm">Ver Detalles</a>
                            @if (r.Aprobado == EstadoAprobacion.Revision && r.UsuarioId.ToString() == userId)
                            {
                                <a asp-action="Editar" asp-route-id="@r.Id" class="btn btn-dark btn-sm mt-1">Editar</a>
                            }
                        </td>
                    }
                }
                else
                {
                    <td></td>
                    <!-- Administrador solo puede eliminar un mantenimiento -->
                    @if (esAdmin) 
                    {
                        <td>
                            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#modalEliminar_@r.Id">
                                Eliminar
                            </button>
                            <div class="modal fade" id="modalEliminar_@r.Id" tabindex="-1" aria-labelledby="modalLabelEliminar_@r.Id" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header bg-danger text-white">
                                            <h5 class="modal-title" id="modalLabelEliminar_@r.Id">Confirmar Eliminación</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                                        </div>
                                        <div class="modal-body">
                                            ¿Estás seguro de que deseas eliminar esta reserva?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                            <form asp-action="Eliminar" asp-controller="Reservas" method="post">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@r.Id" />
                                                <button type="submit" class="btn btn-danger">Eliminar</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    }
                }
            </tr>
        }
    </tbody>
</table>



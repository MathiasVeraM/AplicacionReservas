<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Reservas Biotecnología</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AplicacionReservas.styles.css" asp-append-version="true" />
</head>
<body>
    @if (ViewBag.OcultarNavbar != true)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Reservas" asp-action="Calendario">
                        <img src="~/img/udla.png" style="height: 35px; color: #fefefe;" />
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Reservas" asp-action="Calendario"><i class="bi bi-calendar-week"></i> Calendario</a>
                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Reservas" asp-action="CrearEspecial"><i class="bi bi-feather"></i> Nueva Reserva</a>
                                </li>
                                
                            }
                            else if (User.IsInRole("Usuario"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Reservas" asp-action="Crear"><i class="bi bi-feather"></i> Nueva Reserva</a>
                                </li>
                            }

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Reservas" asp-action="Listado"><i class="bi bi-list-ul"></i> Listado</a>
                            </li>
                        </ul>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Admin") || User.IsInRole("Supervisor"))
                            {
                                <ul class="navbar-nav ms-auto">
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" href="#" id="adminGestionDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="bi bi-grid-fill"></i> Menú
                                        </a>
                                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="adminGestionDropdown">
                                            <li><a class="dropdown-item" asp-controller="Equipos" asp-action="Index"><i class="bi bi-hdd-stack"></i> Equipos</a></li>
                                            <li><a class="dropdown-item" asp-controller="Reactivos" asp-action="Index"><i class="bi bi-droplet"></i> Reactivos</a></li>
                                            
                                            <li><hr class="dropdown-divider"></li>

                                            <li><a class="dropdown-item" asp-controller="Laboratorios" asp-action="Index"><i class="bi bi-flask"></i> Laboratorios</a></li>
                                            <li><a class="dropdown-item" asp-controller="Docentes" asp-action="Index"><i class="bi bi-person-badge"></i> Docentes</a></li>
                                            
                                            <li><hr class="dropdown-divider"></li>

                                            <li><a class="dropdown-item" asp-area="" asp-controller="Cuenta" asp-action="RegistrarAdmin"><i class="bi bi-person-fill-add"></i> Nuevo Administrador</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-controller="Cuenta" asp-action="RegistrarSupervisor"><i class="bi bi-person-fill-add"></i> Nuevo Supervisor</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            }
                            <form asp-area="" asp-controller="Cuenta" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-link fs-4 text-dark" style="text-decoration: none;">
                                    <i class="bi bi-box-arrow-right"></i>
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </nav>
        </header>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - AplicacionReservas - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>